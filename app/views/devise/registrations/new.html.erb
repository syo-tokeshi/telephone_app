<h1><%= t('.sign_up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

   <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name',class: 'form-control' %>
  </div>

  <br>

   <div class="form-group">
    <%= f.label :src %>
    <span style="color:#ff3861;">※4桁の数字でお願いいたします</span>
    <% if !@use_current_password.nil? %>
      <div><%= @use_current_password.each{@pass} %></div>
    <% end %>
    <%= f.text_field :src, autofocus: true, autocomplete: 'src', minlength: 4,maxlength: 4, class: 'form-control' %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :telephone_pass %>
    <span style="color:#ff3861
;">※英数字での入力のみをお願いいたします→ 例[a-zA-Z0-9]</span>
    <%= f.password_field :telephone_pass, autofocus: true, autocomplete: 'telephone_pass',placeholder: "例：qw23f6", class: 'form-control' %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :password %>
     <span style="color:#ff3861
;">※6桁以上でお願いいたします</span>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>  

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<br>

<%= render 'devise/shared/links' %>
